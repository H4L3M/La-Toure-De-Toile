<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LaToureDeToile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--Splash Screen Theme-->
    <style name="Theme.LaToureDeToile.Spalsh" parent="Theme.LaToureDeToile.FullScreen" />

    <style name="Theme.LaToureDeToile.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--FullScreen Theme-->
    <style name="Theme.LaToureDeToile.FullScreen" parent="Theme.LaToureDeToile.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.LaToureDeToile.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LaToureDeToile.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>